{
    "name": "srt-from-vtt",
    "version": "1.0.0",
    "author": "Max Zakharzhevskiy",
    "description": "Utility to convert .vtt files to .srt format.",
    "license": "MIT",
    "main": "dist/cli.js",
    "bin": "dist/cli.js",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=12.2.1"
    },
    "keywords": [
        "utility",
        "video",
        "subtitles",
        "srt",
        "javascript",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/srt-from-vtt.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/srt-from-vtt/issues"
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "minimist": "1.2.7",
        "rimraf": "^3.0.2",
        "trash": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "18.11.3",
        "@types/rimraf": "3.0.2"
    },
    "scripts": {
        "dev": "tsc -w",
        "build": "rm -rf dist && tsc",
        "prepublish": "yarn build",
        "makebin": "yarn build && pkg -t host -o srt-from-vtt dist/index.js"
    }
}
